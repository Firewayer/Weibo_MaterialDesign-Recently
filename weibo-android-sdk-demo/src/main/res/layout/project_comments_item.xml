<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		
        
        <ImageView
            android:id="@+id/img_comment_item_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_icon" />

        <TextView
            android:id="@+id/txt_comment_item_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/img_comment_item_head"
            android:text="王子安静"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_comment_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_comment_item_uname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/img_comment_item_head"
            android:text="7-17 17:15"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_comment_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_comment_item_day"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/img_comment_item_head"
            android:text="这真的是太好了！"
            android:textColor="#000000"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>